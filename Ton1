import React from "react"; import { BrowserRouter, Routes, Route, Link, NavLink, useParams } from "react-router-dom"; import { motion } from "framer-motion"; import { Building2, Home, Package, Factory, MapPin, Ruler, Layers, Phone, Mail, ShieldCheck } from "lucide-react";

// --- Basit UI Bileşenleri (Tailwind + shadcn tarzı) --- function Container({ children, className = "" }) { return <div className={mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8 ${className}}>{children}</div>; }

function Card({ children, className = "" }) { return ( <div className={rounded-2xl shadow-sm border border-gray-200 bg-white ${className}}>{children}</div> ); } function CardHeader({ title, subtitle, icon }) { return ( <div className="flex items-center gap-3 p-6 border-b"> {icon} <div> <h3 className="text-xl font-semibold tracking-tight">{title}</h3> {subtitle && <p className="text-sm text-gray-500">{subtitle}</p>} </div> </div> ); } function CardContent({ children, className = "" }) { return <div className={p-6 ${className}}>{children}</div>; }

// --- Site Verileri (Taslak) --- const PROJECTS = [ { slug: "esenyurt-is-depo", title: "Proje 1 – Esenyurt İş & Depo", summary: "18.500 m² kapalı alan, 7 kat – iş yeri ve depo amaçlı.", year: 2021, type: "Ticari / Depo", location: "Esenyurt, İstanbul (detay eklenecek)", areaClosed: 18500, areaOpen: null, blocks: 1, units: null, storeys: 7, features: ["Yük asansörü", "Geniş rampa", "Tır yanaşma alanı"], }, { slug: "kandilli-konut", title: "Kandilli Projesi", summary: "6 blok, toplam 20.000 m² kapalı alan – 3+1, 2+1, 1+1.", year: null, type: "Konut", location: "Kandilli, İstanbul (detay eklenecek)", areaClosed: 20000, areaOpen: null, blocks: 6, units: null, storeys: null, features: ["Site güvenliği", "Otopark", "Peyzaj alanları"], }, { slug: "lim-diamond-cengelkoy", title: "Lim Diamond", summary: "3 blok – tüm daireler boğaz manzaralı, 7.500 m² – 3+1 ve 5+2 dubleks.", year: null, type: "Konut (Prestij)", location: "Güzeltepe / Çengelköy, İstanbul (detay eklenecek)", areaClosed: 7500, areaOpen: null, blocks: 3, units: null, storeys: null, features: ["Boğaz manzarası", "Yüksek malzeme kalitesi"], }, { slug: "lim-hill-konut", title: "Lim Hill", summary: "7 blok, 22.000 m² kapalı alan – 1+1, 2+1, 3+1 konutlar.", year: null, type: "Konut", location: "(Lokasyon eklenecek)", areaClosed: 22000, areaOpen: null, blocks: 7, units: null, storeys: null, features: ["Modern mimari", "Sosyal alanlar"], }, { slug: "sakarya-osb-depo", title: "Sakarya OSB Depo / Fabrika", summary: "6.800 m² kapalı (12 m yükseklik) + 6.000 m² açık alan – lojistik depo & fabrika.", year: null, type: "Lojistik / Sanayi", location: "Sakarya OSB (detay eklenecek)", areaClosed: 6800, areaOpen: 6000, blocks: 1, units: null, storeys: null, features: ["12 m iç yükseklik", "Geniş araç manevra alanı"], }, ];

