</Container>

); }

function Info({label, value, icon}){ return ( <div className="flex items-center gap-2"> {icon} <div> <div className="text-xs text-gray-500">{label}</div> <div className="font-medium">{value}</div> </div> </div> ); }

function Contact(){ return ( <Container className="py-12"> <div className="grid lg:grid-cols-3 gap-6"> <Card className="lg:col-span-2"> <CardHeader title="İletişim" subtitle="Bizimle çalışmak ister misiniz?" icon={<Phone className="h-6 w-6"/>} /> <CardContent> <form className="grid sm:grid-cols-2 gap-4"> <div> <label className="text-sm">Ad Soyad</label> <input className="mt-1 w-full rounded-xl border px-3 py-2" placeholder="Adınız"/> </div> <div> <label className="text-sm">E-posta</label> <input className="mt-1 w-full rounded-xl border px-3 py-2" placeholder="ornek@eposta.com"/> </div> <div> <label className="text-sm">Telefon</label> <input className="mt-1 w-full rounded-xl border px-3 py-2" placeholder="05xx xxx xx xx"/> </div> <div className="sm:col-span-2"> <label className="text-sm">Konu</label> <input className="mt-1 w-full rounded-xl border px-3 py-2" placeholder="Proje, yatırım, iş birliği"/> </div> <div className="sm:col-span-2"> <label className="text-sm">Mesaj</label> <textarea rows={5} className="mt-1 w-full rounded-xl border px-3 py-2" placeholder="Mesajınızı yazın..."></textarea> </div> <button type="button" className="sm:col-span-2 rounded-xl bg-black text-white px-4 py-2 font-medium hover:bg-gray-900">Gönder</button> <p className="sm:col-span-2 text-xs text-gray-500">Adres, ofis konumu ve KVKK bağlantıları eklenecek.</p> </form> </CardContent> </Card> <Card> <CardHeader title="Ofis" subtitle="Adres ve konum" icon={<MapPin className="h-6 w-6"/>} /> <CardContent> <p className="text-sm text-gray-700">Adres (eklenecek)</p> <div className="mt-3 h-48 w-full rounded-xl bg-gray-100 flex items-center justify-center text-gray-500 text-sm">Harita bileşeni</div> </CardContent> </Card> </div> </Container> ); }

// --- Kök Bileşen --- export default function App(){ return ( <BrowserRouter> <div className="min-h-screen bg-white text-gray-900"> <Navbar /> <Routes> <Route path="/" element={<Home />} /> <Route path="/anayasa" element={<Anayasa />} /> <Route path="/projeler" element={<Projects />} /> <Route path="/projeler/:slug" element={<ProjectDetail />} /> <Route path="/iletisim" element={<Contact />} /> </Routes> <Footer /> </div> </BrowserRouter> ); }

